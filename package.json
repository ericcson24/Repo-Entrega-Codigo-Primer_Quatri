{
  "name": "renewable-energy-investment-simulator-root",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:ai\"",
    "start:backend": "cd backend && npm start",
    "start:frontend": "cd frontend && npm start",
    "start:ai": "cd ai_engine && ../ai_env/bin/python -m uvicorn main:app --port 8000",
    "install:all": "cd frontend && npm install && cd backend && npm install",
    "download:all": "cd backend && npm run download:all",
    "download:weather": "cd backend && npm run download:weather",
    "download:solar": "cd backend && npm run download:solar",
    "download:prices": "cd backend && npm run download:prices",
    "train:ai": "cd backend && npm run train:ai",
    "update:all": "cd backend && npm run update:all"
  },
  "devDependencies": {
    "concurrently": "^8.0.0"
  },
  "dependencies": {
    "axios": "^1.13.2",
    "moment": "^2.30.1"
  }
}
